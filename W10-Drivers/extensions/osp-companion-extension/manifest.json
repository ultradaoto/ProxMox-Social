{
    "manifest_version": 3,
    "name": "OSP Companion",
    "version": "2.1.0",
    "description": "Static Computer Vision Companion for OSP",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.skool.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.tiktok.com/*",
        "*://*.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "OSP Companion"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.skool.com/*",
                "*://*.instagram.com/*",
                "*://*.facebook.com/*",
                "*://*.tiktok.com/*",
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}